root = true

# Java files
[*.{java}]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# General settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Specific settings for Markdown files
[*.md]
trim_trailing_whitespace = false

# Specific settings for JSON files
[*.json]
indent_style = space
indent_size = 2

# Specific settings for XML files
[*.xml]
indent_style = space
indent_size = 2
